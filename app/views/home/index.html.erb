  <header class='todo-header'>
      <h1>Olas first Todo application</h1>
      <h1>Be proud and code YOLO:) </h1>
    </header>

    <section class='todo-main'>
        <%= form_for @todo do  | form | %>
        	<%= form.text_field :name %>
          <%= form.label :urgent, "PILNE!!!!" %>
          <%= form.check_box :urgent %>
        		<%= form.submit %>
        <% end %>
        <ul class='todo-list'>
           <% @todos.each do | todo | %>
             <li class=<%= "urgent" if todo.urgent? %>>
              <%= todo.name %> 
              <%= link_to 'x', todo_path(todo),method: :delete ,
              data: {confirm:"Are you sure you want to delete it from teh list"}%>
            </li>
          <% end %>
         </ul>
    </section>
